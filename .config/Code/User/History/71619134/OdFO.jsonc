{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "margin": 0,
  "height": 32,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "reload_style_on_change": true,

  "modules-left": [
    "custom/logo",
    "hyprland/workspaces",
    "wlr/taskbar",
    "custom/notification"
  ],

  "modules-center": [
    "mpris"
    
  ],

  "modules-right": [
    "tray",
    "pulseaudio",
    "memory",
    "cpu",
    "temperature",
    "clock"
  ],

   "hyprland/workspaces": {
    
    "persistent-workspaces": {
      "*": 5
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },

  "custom/logo": {
    "format": "󰣇",
    "tooltip": false
  },

  "cpu": {
  "format": "󰍛 {usage}%",
  "interval": 2
  },

  "memory": {
  "interval": 5,
  "format": "  {used:0.1f}G/{total:0.1f}G",
  "tooltip": true,
  "tooltip-format": "{used} GB usados de {total} GB ({percentage}%)"
  },

  "custom/notification": {
    "exec": "echo ''",
    "interval": 99999,
    "tooltip": false,
    "format": "{}"
  },

  "tray": {
    "spacing": 6
  },

  "clock": {
    "timezone": "America/Sao_Paulo",
    "format": " {:%H:%M}",
    "format-alt": " {:%d/%m}",
    "tooltip-format": "<big>{:%A, %d de %B de %Y}</big>\n<tt><big>{calendar}</big></tt>",
    "interval": 60
  },

  "pulseaudio": {
  "format": "{icon} {volume}%",
  "format-muted": "󰖁 {volume}%",
  "format-icons": {
    "headphone": "",
    "speaker": "",
    "microphone": ""
  },
  "tooltip": true,
  "tooltip-format": "Volume: {volume}%\nDispositivo: {icon}",
  "on-click": "pavucontrol",
  "on-click-right": "pamixer -t",
  "on-scroll-up": "pamixer -i 5",
  "on-scroll-down": "pamixer -d 5",
  "interval": 2
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 16,
    "on-click": "activate",
    "on-click-middle": "close",
    "tooltip": true,
    "max-length": 50
  },

  "mpris": {
  "player-icons": {
    "spotify": "", 
    "mpv": "󰎁",           
    "firefox": "",               
    "youtube": "󰗃",        
    "rhythmbox": "󰝚",     
    "audacious": "",      
    "ncspot": "",        
    "celluloid": "",        
    "deezer": ""     
  },
  "format": "{player_icon} {status_icon} {artist} - {title}",
  "status-icons": {
    "Playing": "",
    "Paused": "",
    "Stopped": ""
  },
  "max-length": 30,
  "scroll": true,
  "on-click": "playerctl play-pause",
  "on-click-right": "playerctl next",
  "on-click-middle": "playerctl previous"
  }

} 