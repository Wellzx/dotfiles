  "tooltip": true,
  "tooltip-format": "{used} GB usados de {total} GB ({percentage}%)"
  },

  "hyprland/workspaces": {
    "format": "{}",
    "persistent-workspaces": {
      "*": 5
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },

  "custom/notification": {
    "exec": "echo 'üîî'",
