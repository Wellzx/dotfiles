{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "margin": 0,
  "height": 28,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "reload_style_on_change": true,

  "modules-left": [
    "custom/logo",
    "hyprland/workspaces",
    "wlr/taskbar",
    "custom/notification"
  ],

  "modules-center": [
    "mpris"
    
  ],

  "modules-right": [
    "tray",
    "pulseaudio",
    "memory",
    "cpu",
    "temperature",
    "clock"
  ],

  "custom/logo": {
    "format": "Û∞£á",
    "tooltip": false
  },

  "cpu": {
  "format": "Û∞çõ {usage}%",
  "interval": 2
  },

  "temperature": {
